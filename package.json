{
  "name": "what-the-beep",
  "displayName": "What the beep?",
  "description": "Play audio alerts",
  "publisher": "groogle",
  "version": "0.0.7",
  "engines": {
    "vscode": "^1.81.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leep-frog/what-the-beep"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onTaskType:audioPlayer",
    "onCommand:what-the-beep.play",
    "onCommand:what-the-beep.playWithArgs"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "what-the-beep.beep",
        "title": "What the Beep: Beep"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=bundled-out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --fix --ext ts",
    "pretest": "npm run compile && npm run esbuild",
    "test-compile": "tsc -p ./",
    "test": "vscode-test --coverage --coverageReporter lcov --coverageReporter html",
    "posttest": "echo 'Open the following file for html coverage report:\nfile:///C:/Users/gleep/Desktop/Coding/vs-code/what-the-beep/coverage/index.html'",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.20.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@leep-frog/vscode-test-stubber": "^2.0.2",
    "sound-play": "^1.1.0"
  }
}
